{
  "name": "mcporter",
  "version": "0.7.3",
  "description": "TypeScript runtime and CLI for connecting to configured Model Context Protocol servers.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "bin": {
    "mcporter": "dist/cli.js"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "acorn": "^8.15.0",
    "commander": "^14.0.2",
    "es-toolkit": "^1.43.0",
    "jsonc-parser": "^3.3.1",
    "ora": "^9.0.0",
    "rolldown": "1.0.0-beta.57",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/estree": "^1.0.8",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251229.1",
    "@vitest/coverage-v8": "^4.0.16",
    "bun-types": "^1.3.5",
    "cross-env": "^10.1.0",
    "express": "^5.2.1",
    "oxlint": "^1.36.0",
    "oxlint-tsgolint": "^0.10.0",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steipete/mcporter"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "sweetistics"
  ],
  "author": "Sweetistics",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devEngines": {
    "runtime": [
      {
        "name": "node",
        "version": ">=20"
      }
    ]
  },
  "scripts": {
    "mcporter": "tsx src/cli.ts",
    "mcp": "pnpm exec tsx src/cli.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:bun": "bun scripts/build-bun.ts",
    "check": "pnpm lint:biome && pnpm lint:oxlint && pnpm typecheck",
    "lint": "pnpm check",
    "lint:biome": "biome check",
    "lint:oxlint": "oxlint --type-aware --tsconfig tsconfig.json --max-warnings=0",
    "typecheck": "tsgo --project tsconfig.json --noEmit",
    "test": "cross-env MCPORTER_TEST_REPORTER=quiet pnpm test:verbose",
    "test:quiet": "cross-env MCPORTER_TEST_REPORTER=quiet pnpm test:verbose",
    "test:verbose": "node scripts/test-runner.js",
    "test:live": "MCP_LIVE_TESTS=1 vitest run tests/live",
    "clean": "rimraf dist",
    "dev": "tsc -w -p tsconfig.build.json",
    "docs:list": "pnpm exec tsx scripts/docs-list.ts",
    "mcporter:list": "pnpm exec tsx src/cli.ts list",
    "mcporter:call": "pnpm exec tsx src/cli.ts call"
  }
}